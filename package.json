{
	"name": "peacock",
	"productName": "Peacock",
	"version": "2.2.0",
	"description": "Open source privacy-first browser that hosts your data on the blockchain.",
	"main": "main.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/Codiscite/peacock.git"
	},
	"keywords": [
		"browser",
		"web",
		"web3",
		"blockchain",
		"privacy",
		"internet"
	],
	"build": {
		"appId": "com.codiscite.peacock",
		"win": {
			"target": "nsis",
			"icon": "build/icon.png"
		},
		"mac": {
			"category": "books",
			"target": [
				"dmg"
			],
			"icon": "build/icon.png"
		},
		"linux": {
			"target": ["AppImage"],
			"icon": "build/icon.png"
		},
		"nsis": {
			"oneClick": "false",
			"allowToChangeInstallationDirectory": "true",
			"perMachine": "true"
		}
	},
	"scripts": {
		"start": "electron .",
		"pack": "electron-builder --dir",
		"release": "electron-builder -p always",
		"dist-all": "electron-builder -mwl --publish=always"
	},
	"author": "Codiscite",
	"license": "MIT",
	"devDependencies": {
		"electron": "^9.0.0-beta.2",
		"electron-builder": "^22.3.2"
	},
	"dependencies": {
		"@cliqz/adblocker-electron": "^1.8.6",
		"blockstack": "^19.3.0",
		"child_process": "^1.0.2",
		"cors": "^2.8.5",
		"cross-fetch": "^3.0.4",
		"discord-rpc": "^3.1.0",
		"dragula": "^3.7.2",
		"electron-context-menu": "^0.16.0",
		"electron-store": "^5.1.0",
		"express": "^4.17.1",
		"jquery": "^3.4.1",
		"jquery-ui": "^1.12.1",
		"jquery-ui-dist": "^1.12.1",
		"uuid": "^3.4.0"
	}
}