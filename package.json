{
	"name": "peacock",
	"productName": "Peacock",
	"version": "2.3.3",
	"description": "Open source privacy-first browser that hosts your data on the blockchain.",
	"main": "main.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/Codiscite/peacock.git"
	},
	"keywords": [
		"browser",
		"web",
		"web3",
		"blockchain",
		"privacy",
		"internet"
	],
	"build": {
		"appId": "com.codiscite.peacock",
		"win": {
			"target": "nsis",
			"icon": "build/icon.png"
		},
		"mac": {
			"category": "books",
			"target": [
				"dmg"
			],
			"icon": "build/icon.png"
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"icon": "build/icon.png"
		},
		"nsis": {
			"oneClick": "false",
			"allowToChangeInstallationDirectory": "true",
			"perMachine": "true"
		}
	},
	"scripts": {
		"start": "electron ."
	},
	"author": "Spike Raxstone <spike@peacock.link>",
	"license": "MIT",
	"devDependencies": {
		"electron": "^9.0.0-beta.12",
		"electron-builder": "^22.4.1"
	},
	"dependencies": {
		"@cliqz/adblocker-electron": "^1.12.3",
		"blockstack": "^21.0.0",
		"child_process": "^1.0.2",
		"cors": "^2.8.5",
		"cross-fetch": "^3.0.4",
		"discord-rpc": "^3.1.0",
		"electron-context-menu": "^0.16.0",
		"electron-privacy": "^1.0.4",
		"electron-store": "^5.1.1",
		"express": "^4.17.1",
		"jquery": "^3.4.1",
		"sortablejs": "^1.10.2",
		"uuid": "^7.0.2"
	}
}